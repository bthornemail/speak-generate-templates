# Docker Compose Environment Variables

# Application Port Configuration
HOST_PORT=8080
APP_PORT=80

# TURN Server Configuration (for WebRTC)
# These variables are prefixed with VITE_ to be accessible in the browser
# Format: turn:hostname:port or turns:hostname:port (for TLS)
VITE_TURN_SERVER_URL=turn:coturn:3478
VITE_TURN_USERNAME=canvasl
VITE_TURN_PASSWORD=change-me-in-production

# COTURN Server Configuration
COTURN_PORT=3478
COTURN_REALM=canvasl.local
COTURN_USER=canvasl
COTURN_PASS=change-me-in-production

# External IP (optional - auto-detected if not set)
# COTURN_EXTERNAL_IP=your-public-ip
