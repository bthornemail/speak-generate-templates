{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "./custom-instructions.md"
  ],
  "mcp": {
    "wikipedia-mcp": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "mcp/wikipedia-mcp"
      ],
      "enabled": true
    },
    "arxiv-mcp-server": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "ARXIV_STORAGE_PATH",
        "-v",
        "/home/main/automaton:/home/main/automaton",
        "mcp/arxiv-mcp-server"
      ],
      "enabled": true,
      "environment": {
        "ARXIV_STORAGE_PATH": "/home/main/automaton/papers"
      }
    },
    "claude-code": {
      "type": "local",
      "command": [
        "claude",
        "mcp",
        "server"
      ],
      "enabled": false,
      "environment": {}
    }
  },
  "provider": {
    "opencode": {
      "models": {
        "opencode/big-pickle": {
          "name": "Big Pickle"
        }
      }
    },
    "openrouter": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "OpenRouter",
      "options": {
        "baseURL": "https://openrouter.ai/api/v1"
      },
      "models": {
        "opencode/big-pickle": {
          "name": "Big Pickle (via OpenRouter)"
        },
        "z-ai/glm-4.5-air:free": {
          "name": "GLM-4.5 Air (Free)"
        }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "gpt-oss:20b": {
          "name": "GPT OSS"
        }
      }
    }
  },
  "agent": {
    "automaton-interface": {
      "description": "Primary interface for the continuous self-referencing automaton system - coordinates all operations and delegates to specialists",
      "mode": "primary",
      "model": "opencode/big-pickle",
      "temperature": 0.3,
      "prompt": "{file:./.opencode/agent/automaton-interface.md}"
    },
    "automaton-control": {
      "description": "Control center operator - handles execution, configuration, and running the automaton system",
      "mode": "subagent",
      "model": "opencode/big-pickle",
      "temperature": 0.3,
      "prompt": "{file:./.opencode/agent/automaton-control.md}"
    },
    "automaton-analyzer": {
      "description": "Pattern detective - analyzes Church encoding patterns, self-reference recursion, dimensional relationships, and topological structures",
      "mode": "subagent",
      "model": "opencode/big-pickle",
      "temperature": 0.2,
      "prompt": "{file:./.opencode/agent/automaton-analyzer.md}"
    },
    "automaton-visualizer": {
      "description": "Visual storyteller - creates diagrams, charts, and visualizations of the computational topology",
      "mode": "subagent",
      "model": "opencode/big-pickle",
      "temperature": 0.3,
      "prompt": "{file:./.opencode/agent/automaton-visualizer.md}"
    },
    "autonomous-operations": {
      "description": "Expert for autonomous CanvasL operations - handles self-regeneration, self-modification, goal negotiation, consensus, and autonomous evolution (RFC 2119 protocol)",
      "mode": "subagent",
      "model": "opencode/big-pickle",
      "temperature": 0.3,
      "prompt": "{file:./.opencode/agent/autonomous-operations.md}"
    },
    "geometric-operations": {
      "description": "Expert for regular polyhedra geometry operations - handles BQF encoding, polyhedra transformations, computational mapping, and geometric validation",
      "mode": "subagent",
      "model": "opencode/big-pickle",
      "temperature": 0.2,
      "prompt": "{file:./.opencode/agent/geometric-operations.md}"
    },
    "dimensional-guide": {
      "description": "Expert tour guide through dimensional topology - navigates 0D-7D progression and explains dimensional relationships",
      "mode": "subagent",
      "model": "opencode/big-pickle",
      "temperature": 0.2,
      "prompt": "{file:./.opencode/agent/dimensional-guide.md}"
    },
    "church-encoding-expert": {
      "description": "Lambda calculus teacher - explains Church encoding, lambda calculus foundations, and mathematical concepts",
      "mode": "subagent",
      "model": "opencode/big-pickle",
      "temperature": 0.2,
      "prompt": "{file:./.opencode/agent/church-encoding-expert.md}"
    }
  }
}